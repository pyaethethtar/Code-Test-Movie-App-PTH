<?xml version="1.0" encoding="utf-8"?>
<com.example.movieapp.viewpods.CastViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/margin_xlarge">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCasts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_cast"
        style="@style/text_title"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_view_all"
        android:textColor="@color/accentColor"
        android:textSize="@dimen/text_regular"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCasts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCasts"
        android:layout_marginTop="@dimen/margin_medium_1"
        tools:listitem="@layout/viewholder_cast"/>

</com.example.movieapp.viewpods.CastViewPod>